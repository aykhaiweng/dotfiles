[user]
    name = Au Yeong Khai Weng
    email = aykhaiweng@gmail.com
[core]
    autocrlf = input
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space
    excludesfile = ~/.gitignore_global
    pager = delta
[apply]
    whitespace = fix
[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff
    g = grep -I
    lg = log -p
    pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
    rb = rbranch
    rv = review
    st = status
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[push]
    default = simple
[merge]
    log = true
    conflictStyle = zdiff3  
[rerere]
    enabled = 1
[init]
	defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    dark = true      # or light = true, or omit for auto-detection
